<div class="container">
    <div class="media">
        <a href="/userProfile/{{post.postUser._id}}"></a>
  <img class="mr-3" src="img/acc.jpg" alt="" width="64px">
  <div class="media-body">
    <h5 class="mt-0">{{post.title}}</h5>
    <p>{{post.body}}</p>
    <br>
    <small>{{getLastMoment date 'hour'}}</small>
    <hr>
   {{#each post}}
   {{#each comments}}
   <div class="media mt-3" id="kp-1">
      
          <a class="mr-3" href="/userProfile/{{commentUser._id}}"></a>
        <img src="img/acc.jpg" class="mr-3" alt="{{commentUser.image.default}}" width="64px">
      </a>
      <div class="media-body">
        <p>{{commentBody}}</p>
        <br>
        <small>{{getLastMoment date 'hour'}}</small>
      </div>
    </div>
    <hr>
   {{/each}}
   {{/each}}
   {{#each post}}
   {{#each likes}}
    <div class="media mt-3" id="kp-1">
      
          <a class="mr-3" href="/userProfile/{{likeUser._id}}"></a>
        <img src="img/acc.jpg" class="mr-3" alt="{{likeUser.image.default}}" width="64px">
      </a>
      <div class="media-body">
        <h5 class="mt-0"><i class="fa fa-heart red"></i></h5>
        <br>
        <small>{{getLastMoment date 'hour'}}</small>
      </div>
    </div>
    <hr>
    {{/each}}
    {{/each}}
    <br>
    <h4>
        <a href="/likePost/{{post._id}}">
        <i class="fa fa-heart-o red post-icons">Love</i></a>
        
    </h4>
    {{#if post.allowComments}}
    <form id="comment_form" action="/leaveComment/{{post._id}}" method="POST" class="form-inline" >
    <div class="form-group mx-sm-2 mg-2 ">
        <input type="text" name="commentBody" class="form-control" placeholder="leave comment..">
    </div>
    <button class="btn btn-primary mb-2 mt-2" type="submit"><i class="fa fa-comment"></i></button>
    </form>
   
    {{else}}
    <p class="red">Comment is not allowed!!</p>
    {{/if}}
  </div>
</div>
</div>