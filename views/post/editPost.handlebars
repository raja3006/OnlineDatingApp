<div class="container">
    <h2 class="center">
        <i class="fa fa-spinner" style="display: none" id="spinner"></i>
    </h2>
    <form id="editForm" action="/editPost/{{post._id}}" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" value="{{post.title}}" class="form-control">
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea type="text" name="body" class="form-control">{{post.body}}</textarea>
    </div>

     <div class="form-group">
        <label for="status">Status</label>
        <select name="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="friends">Friends</option>
        </select>
    </div>

    <div class="form-group"> 
        <input type="file" name="upload" id="upload-input">
    </div>

    <div class="form-group form-check"> 
        <input type="checkbox" name="allowComments" id="checkbox" class="form-check-input">
        <label for="checkbox">Allow Comment</label>
    </div>

    <div class="form-group"> 
       <button type="button" onclick="savePost()" class="btn btn-primary">save</button>
    </div>

    </form>
</div>
<script>
    function savePost(){
        document.getElementById('spinner').style.display='block';
        document.getElementById('editForm').style.display='none';
        setTimeout(function(){
            document.getElementById('editForm').submit();
        },7000)
    }
</script>